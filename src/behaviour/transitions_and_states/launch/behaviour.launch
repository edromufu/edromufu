<launch>
    <arg name="imu_connected" default="true"/>
    <arg name="imu_port" default="/dev/ttyIMU"/>

    
    <!-- Máquina de Estados  -->
	<node name="behaviour_node" pkg="transitions_and_states" exec="state_machine_receiver.py" output="screen" >   </node> 
    <node name="walking" pkg="states_routine" exec="walking_routine.py" output="screen" >    </node>
    <node name="kick" pkg="states_routine" exec="kick_routine.py" output="screen" >    </node>
    <node name="stand_still" pkg="states_routine" exec="stand_still_routine.py" output="screen" >    </node>
    <node name="getting_up" pkg="states_routine" exec="getting_up_routine.py" output="screen" >    </node>


	<!-- Webots 
	<include file="$(find bhv_independent_simulator)/launch/behaviour_simulator.launch"></include>
    -->

    <!--Interpretação-->
	<node name="ros_packer" pkg="sensor_observer" exec="ros_packer.py" output="screen" >   
    </node>

    <!--Leitura do IMU-->
	<node name="imu_ros_arduino" pkg="imu_ros_arduino" exec="imu_read.py" output="screen" if="$(eval arg('imu_connected'))">   
        <param name="port" value="$(eval arg('imu_port'))" />
    </node>

</launch>
